<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondAddressActivity">

    <ImageView
        android:id="@+id/map2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/mapa" />

    <EditText
        android:id="@+id/address1_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/rounded_edittext"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:hint="Ubicación 1"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gris" />

    <Button
        android:id="@+id/remove_location"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/drawable_remove_location_bg" />

    <Button
        android:id="@+id/search_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_search"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:cornerRadius="20dp"
        android:backgroundTint="@color/blue_add"
        android:textColor="@color/white"
        android:text="Buscar" />

    <EditText
        android:id="@+id/address2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address1_2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/rounded_edittext2"
        android:drawableLeft="@drawable/ic_baseline_location_on_24_blue"
        android:hint="Ubicación 2"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gris" />

</RelativeLayout>